{
  "name": "@codeurs/front",
  "version": "0.4.0-alpha.6",
  "description": "Collection of mithril utilities and components",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "repository": "https://github.com/codeurs/front",
  "author": "Ben Merckx <ben@codeurs.be>",
  "license": "MIT",
  "scripts": {
    "dev": "run-p less watch",
    "compile": "tsc",
    "watch": "tsc --pretty --preserveWatchOutput -w",
    "docs": "run-p dev docs:watch",
    "docs:watch": "cd docs && webpack --mode development -w",
    "docs:build": "cd docs && webpack --mode production",
    "less": "copyfiles -u 1 \"./src/**/*.less\" dist",
    "prepublishOnly": "run-p compile less",
    "precommit": "npm run -s docs:build && node -e \"process.exit(require('os').platform() != 'win32')\" || lint-staged",
    "pretty:format": "prettier --print-width 80 --single-quote --write --no-semi --no-bracket-spacing --parser typescript --tab-width 2 --use-tabs",
    "pretty:hyperscript": "perl -i -0777pe 's/\\bm\\(\\s+/m(/gs'"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run pretty:format",
      "npm run pretty:hyperscript",
      "git add"
    ],
    "src/**/*.less": [
      "prettier --write --tab-width 2 --use-tabs --parser postcss",
      "git add"
    ]
  },
  "dependencies": {
    "@types/mithril": "codeurs/mithril.d.ts",
    "classnames": "^2.2.6",
    "jump.js": "^1.0.2",
    "matchmediaquery": "^0.2.1",
    "mithril": "mithriljs/mithril.js#8ae094f",
    "object-to-formdata": "codeurs/object-to-formdata",
    "popmotion": "^8.1.10",
    "scrollbar-width": "^3.1.1"
  },
  "devDependencies": {
    "@codeurs/packer": "codeurs/packer",
    "@types/es6-shim": "^0.31.37",
    "babel-cli": "^6.26.0",
    "copyfiles": "^2.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "npm-run-all": "^4.1.3",
    "typescript": "^2.9.1"
  }
}
