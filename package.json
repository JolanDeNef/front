{
	"name": "@codeurs/front",
	"version": "0.4.2",
	"description": "Collection of mithril utilities and components",
	"sideEffects": false,
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"./dist"
	],
	"repository": "https://github.com/codeurs/front",
	"author": "Ben Merckx <ben@codeurs.be>",
	"license": "MIT",
	"scripts": {
		"dev": "run-p less watch",
		"build": "tsc",
		"watch": "tsc --pretty --preserveWatchOutput -w",
		"examples": "run-p dev examples:watch",
		"examples:watch": "cd examples && webpack --mode development -w",
		"examples:build": "cd examples && cross-env ANALYZE=3000 webpack --mode production --optimize-minimize",
		"ghpages": "run-s prepublishOnly examples:build",
		"less": "copyfiles -u 1 \"./src/**/*.less\" dist",
		"prepublishOnly": "run-p build less",
		"precommit": "node -e \"process.exit(require('os').platform() != 'win32')\" || lint-staged",
		"pretty:format": "prettier --print-width 80 --single-quote --write --no-semi --no-bracket-spacing --parser typescript --tab-width 2 --use-tabs",
		"pretty:hyperscript": "perl -i -0777pe 's/\\bm\\(\\s+/m(/gs'"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"npm run pretty:format",
			"npm run pretty:hyperscript",
			"git add"
		],
		"src/**/*.less": [
			"prettier --write --tab-width 2 --use-tabs --parser postcss",
			"git add"
		]
	},
	"dependencies": {
		"@types/classnames": "^2.2.6",
		"@types/mithril": "^1.1.13",
		"classnames": "^2.2.5",
		"fast-deep-equal": "^2.0.1",
		"hex-to-rgb": "^1.0.1",
		"jump.js": "codeurs/jump.js",
		"matchmediaquery": "^0.2.1",
		"mithril": "^1.1.6",
		"object-to-formdata": "codeurs/object-to-formdata",
		"popmotion": "^8.1.10",
		"scrollbar-width": "^3.1.1"
	},
	"devDependencies": {
		"@codeurs/packer": "^0.6.0-alpha.3",
		"babel-cli": "^6.26.0",
		"copyfiles": "^2.0.0",
		"cross-env": "^5.2.0",
		"husky": "^0.14.3",
		"lint-staged": "^7.2.2",
		"npm-run-all": "^4.1.3",
		"prettier": "^1.15.3",
		"typescript": "^3.1.4"
	}
}
