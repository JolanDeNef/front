{
	"compilerOptions": {
		"sourceMap": true,
		"importHelpers": true,
		"allowJs": true,
		"target": "es5",
		"module": "esNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"noUnusedParameters": false,
		"removeComments": false,
		"preserveConstEnums": true,
		"skipLibCheck": true,
		"baseUrl": "./src/",
		"jsx": "react",
		"jsxFactory": "m",
		"experimentalDecorators": true
	},
	"include": ["./src/**/*", "."]
}
