{
	"compilerOptions": {
		"strict": true,
		"target": "es5",
		"declaration": true,
		"sourceMap": true,
		"module": "es6",
		"moduleResolution": "node",
		"baseUrl": "./src/",
		"outDir": "./dist/",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"preserveWatchOutput": true,
		"experimentalDecorators": true,
		"stripInternal": true,
		"lib": ["es2017", "dom"],
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"files": ["./src/index.ts"]
}
