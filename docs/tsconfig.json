{
  "compilerOptions": {
    "sourceMap": true,
    "allowJs": true,
    "target": "es2016",
    "module": "es2015",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "baseUrl": "./src/"
  },
  "include": [
    "./src/**/*",
    "."
  ]
}